{
  "name": "doom-and-dastardlies-dice-bot",
  "version": "1.0.0",
  "description": "Discord dice roller bot for DooM & Dastardlies TTRPG with secret rolls",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "deploy-commands": "node dist/deploy-commands.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "discord",
    "dice",
    "ttrpg",
    "doom-and-dastardlies",
    "discord-bot",
    "dice-roller"
  ],
  "author": "Stefano Vetrini <https://stefanovetrini.itch.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ningod/DooMandDastardlies.git"
  },
  "homepage": "https://stefanovetrini.itch.io/doom-and-dastardlies",
  "type": "module",
  "dependencies": {
    "@upstash/redis": "^1.36.2",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.2.3",
    "@types/uuid": "^10.0.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
